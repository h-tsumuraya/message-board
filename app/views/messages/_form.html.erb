<%= form_for(@message, html: {class: "form-horizontal"}) do |f| %>
    <% if @message.errors.present? %>
        <div class="alert alert-danger">
            <%= alert %>
            <ul>
                <% @message.errors.full_messages.each do |full_message| %>
                    <li>
                        <%= full_message %>
                    </li>
                <% end %>
            </ul>
        </div>
    <% end %>
    
    <div class="form-group">
        <label for="nameTextInput" class="col-sm-1 control-label">名前</label>
        <div class="col-sm-4">
            <%= f.text_field :name, :id => "nameTextInput", :class => "form-control" %>
        </div>
    </div>

    <div class="form-group">
        <label for="ageTextInput" class="col-sm-1 control-label">年齢</label>
        <div class="col-sm-4">
            <%= f.text_field :age, :id => "ageTextInput", :class => "form-control" %>
        </div>
    </div>

    <div class="form-group">
        <label for="contentTextInput" class="col-sm-1 control-label">内容</label>
        <div class="col-sm-4">
            <%= f.text_area :body, :id => "contentextInput", :class => "form-control" %>
        </div>
    </div>
    
    <br/>
    <div class="form-group">
        <div class="col-sm-offset-1 col-sm-4">
            <%= f.submit class: "btn btn-sm btn-primary" %>        
        </div>
    </div>
<% end %>