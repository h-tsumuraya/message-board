<%= form_for(@message) do |f| %>
    <% if @message.errors.present? %>
        <div class="alert alert-danger">
            <%= alert %>
            <ul>
                <% @message.errors.full_messages.each do |full_message| %>
                    <li>
                        <%= full_message %>
                    </li>
                <% end %>
            </ul>
        </div>
    <% end %>
    
    <label for="nameTextInput">名前</label>
    <%= f.text_field :name, :id => "nameTextInput" %>
    
    <br/>

    <div class="row">
        <div class="col-xs-3">
            <label for="contentTextInput">内容</label>
            <%= f.text_area :body, :class => "form-control", :size => "3", :id => "contentTextInput" %>
        </div>
    </div>
    <br/>
    <%= f.submit class: "btn btn-sm btn-primary" %>
<% end %>