<div class="panel panel-default">
    <div class="panel-heading">
        メッセージ一覧
    </div>
    
    <div class="panel-body">
        <% @messages.each do |message| %>
        <div class="message">
            <span class="label label-info"><%= message.name %></span>
                <span class="message_text"><%= message.body %></span>
                <%= link_to("編集", edit_message_path(message), class: "btn btn-success btn-xs") %>
                <%= link_to "削除" , message , method: :delete, data: { confirm: "削除してもよろしいですか?" }, class: "btn btn-danger btn-xs" %>
            <br/>
        </div>
        <% end %>
    </div>
</div>

<% #部分テンプレートを読み込む %>
<%= render "form" %>